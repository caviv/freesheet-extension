{
  "manifest_version": 3,
  "name": "Simple Free Sheet Extension",
  "version": "1.0",
  "description": "A Chrome extension that opens a pop-up window with a tiny Excel-like spread sheet",
  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "permissions": [
    "storage",
    "clipboardRead",
    "clipboardWrite"
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "host_permissions": [
    "http://localhost:8080/*",
    "https://localhost:8080/*",
    "http://freesheet.io/*",
    "https://freesheet.io/*",
    "http://www.freesheet.io/*",
    "https://www.freesheet.io/*"
  ]
}

